@using LiveScoreUpdateSystem.Web.Areas.Admin.Models
@model CountryViewModel

@using (Ajax.BeginForm<PanelController>(c => c.AddCountry(null), FormMethod.Post, null, new { id = "add-data-form" }))
{
    <div class="form-group">
        <label>Name</label>
        <div class="input-group">
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-tag"></i>
            </span>
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name", required = true } })
        </div>
        <div>
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>

    <div class="form-group">
        <label>National flag link</label>
        <div class="input-group">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-flag"></span>
            </span>
            @Html.EditorFor(m => m.FlagPictureUrl, new { htmlAttributes = new { @class = "form-control", placeholder = "National Flag Url", required = true } })
        </div>
    </div>

    @Html.AntiForgeryToken()

    <input type="submit" value="Add" class="btn btn-primary" />
}